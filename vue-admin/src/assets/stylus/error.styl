@import './reset'
.not-found,
.forbiden {
    height(100%)
    .error-content {
        top(50%)
        left(50%)
        transform-translate(-50%, -50%)
        .pic-error {
            width(100%)
            float: left
            overflow: hidden
            &-parent {
                width(100%)
            }
            &-child {
                &.left {
                    top(17px)
                    left(220px)
                    width(80px)
                    opacity: 0
                    animation: cloudLeft 2s linear 2s forwards
                }

                @keyframes cloudLeft {
                    0% {
                        top(17px)
                        left(220px)
                        opacity: 0
                    }

                    20% {
                        top(33px)
                        left(188px)
                        opacity: 1
                    }

                    80% {
                        top(81px)
                        left(92px)
                        opacity: 1
                    }

                    100% {
                        top(97px)
                        left(60px)
                        opacity: 0
                    }
                }
            }
        }

        .bullshit {
            float: left
            width(300px)
            padding-t-b(30px)
            padding-l-r(0)
            overflow: hidden
            &-oops {
                margin-bottom(20px)
                font-size(32px)
                font-weight(bold)
                line-height(40px)
                opacity: 0
                animation: slideUp .5s forwards
            }

            &-headline {
                margin-bottom(10px)
                font-size(20px)
                font-weight(bold)
                line-height(24px)
                font-color(#222)
                opacity: 0
                animation: slideUp .5s .1s forwards
            }

            &-info {
                margin-bottom(30px)
                font-size(13px)
                line-height(21px)
                opacity: 0
                animation: slideUp .5s .2s forwards
            }

            &-return-home {
                float: left
                width(110px)
                height(36px)
                font-size(14px)
                line-height(36px)
                font-color(#fff)
                cursor(pointer)
                background(#1890ff)
                border-radius(100px)
                opacity: 0
                animation: slideUp .5s .3s forwards
            }

            @keyframes slideUp {
                0% {
                    opacity: 0
                    transform: translateY(60px)
                }
                100% {
                    opacity: 1
                    transform: translateY(0)
                }
            }
        }
    }
}